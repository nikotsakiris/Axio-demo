# required
OPENAI_API_KEY=sk-...

# required (cross-encoder reranking)
COHERE_API_KEY=

# postgres
DATABASE_URL=postgresql://axios:axios@localhost:5432/axios

# qdrant
QDRANT_URL=http://localhost:6333
QDRANT_COLLECTION=axios_chunks

# models
EMBEDDING_MODEL=text-embedding-3-small
LLM_MODEL=gpt-4.1-mini

# retrieval
RETRIEVAL_TOP_K=20
RERANK_TOP_K=5
SIMILARITY_THRESHOLD=0.7

# chunking
CHUNK_SIZE_TOKENS=300
CHUNK_OVERLAP_PCT=0.15

# transcript
TRANSCRIPT_BUFFER_TURNS=10
TRANSCRIPT_QUERY_TURNS=5
